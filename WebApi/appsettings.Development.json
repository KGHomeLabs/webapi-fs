{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=LocalUserDB;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "Microsoft.AspNetCore.Authorization": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Display.MessageTemplateTextFormatter, Serilog",
          "formatterArgs": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
            "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\temp\\logs\\webapi-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "shared": true,
          "flushToDiskInterval": "00:00:01",
          "formatter": "Serilog.Formatting.Display.MessageTemplateTextFormatter, Serilog",
          "formatterArgs": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
          }
        }
      }
    ]
  }
}