{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "‚ñ∂Ô∏è Debug WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "start-webapi",
            "program": "${workspaceFolder}/WebApi/bin/Debug/net8.0/WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WebApi",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
            },
            "console": "internalConsole",
            "stopAtEntry": false,
            "justMyCode": false,
            "requireExactSource": false
        },
        {
            "name": "üß™ Debug WebApi.Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-sln",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/WebApi.Tests/WebApi.Tests.csproj",
                "--no-build",
                "--filter",
                "FullyQualifiedName=WebApi.Tests.HelloApiTests.GetHello_WithValidToken_ReturnsUserName"
            ],
            "cwd": "${workspaceFolder}/WebApi.Tests",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "internalConsole",
            "stopAtEntry": false,
            "justMyCode": false,
            "requireExactSource": false
        }
    ],
    "compounds": [
        {
            "name": "WebApi + Tests",
            "configurations": [
                "‚ñ∂Ô∏è Debug WebApi",
                "üß™ Debug WebApi.Tests"
            ],
            "preLaunchTask": "build-sln"
        }
    ]
}